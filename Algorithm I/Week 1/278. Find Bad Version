### 강민수 풀이
class Solution {
public:
    int firstBadVersion(int n) {
        int start = 0, end = n;
        while(start <= end) {
            int mid = start + (end - start) / 2;                                      // 이렇게 mid를 구하는 이유는 Overflow 방지를 위해서이다.
            if (isBadVersion(mid)) {
                if(!isBadVersion(mid-1)) return mid;   
                else end = mid - 1;
            }
            else start = mid + 1;
            
        }
        return -1;
    }
};
